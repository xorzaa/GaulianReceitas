<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Definição do tema principal da aplicação -->
    <style name="Theme.GaluianReceitas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Cor de fundo padrão -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Cores principais -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Cores do texto -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>

        <!-- Personalização de botões e componentes do Material Design -->
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>

        <!-- Estilo do Toolbar -->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar</item>

        <!-- Cor da barra de status -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <!-- Outras personalizações -->
        <item name="android:divider">@android:color/darker_gray</item>
    </style>

</resources>
